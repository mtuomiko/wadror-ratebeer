<%= form_with(model: beer, local: true) do |form| %>
  <% if beer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(beer.errors.count, "error") %> prohibited this beer from being saved:</h2>

      <ul>
        <% beer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: 'col-md-2 col-form-label' %>
    <div class="col-md-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :style_id, 'Style', class: 'col-md-2 col-form-label' %>
    <div class="col-md-10">
      <%= form.collection_select :style_id, @styles, :id, :name, {}, { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :brewery_id, 'Brewery', class: 'col-md-2 col-form-label' %>
    <div class="col-md-10">
      <%= form.collection_select :brewery_id, @breweries, :id, :name, {}, { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>