<div>
  <p>
    <strong>Name:</strong>
    <%= @beer.name %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= link_to @beer.style.name, @beer.style %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= link_to @beer.brewery.name, @beer.brewery %>
  </p>

  <p>
    <% if @beer.ratings.empty? %>
      This beer has not yet been rated!
    <% else %>
      <%= "Has #{pluralize(@beer.ratings.count, 'rating')}, average #{@beer.average_rating}" %>
    <% end %>
  </p>
</div>

<% if current_user %>
  <div>
    <h4>Give a rating</h4>

    <%= form_with(model: @rating, local: true) do |form| %>
      <%= form.hidden_field :beer_id %> 
      <div class="form-group row">
        <%= form.label :score, class: 'col-md-2 col-form-label' %>

        <div class="col-md-4">
          <%= form.number_field :score, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col">
          <%= form.submit class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>

  <div>
    <%= link_to 'Edit', edit_beer_path(@beer), class: 'btn btn-primary' %>
    <%= link_to 'Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>
<% end %>