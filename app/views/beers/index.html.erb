<h1>Beers</h1>

<p>Number of beers: <%= @beers.count %> </p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Brewery</th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer_path(beer.id) %></td>
        <td><%= link_to beer.style.name, beer.style %></td>
        <td><%= link_to beer.brewery.name, brewery_path(beer.brewery_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Beer', new_beer_path, class: 'btn btn-primary' if current_user %>
