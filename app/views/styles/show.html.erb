<h1><%= @style.name %></h1>

<p><strong>Description:</strong> <%= @style.description %></p>

<p>
  <% if @style.ratings.empty? %>
    <strong>No ratings for this beer style.</strong>
  <% else %>
    <%= "Has #{pluralize(@style.ratings.count, 'rating')}, average #{round_num @style.average_rating}" %>
  <% end %>
</p>

<% if @style.beers.empty? %>
  <p><strong>No beers of this style listed.</strong></p>
<% else %>
  <strong>Beers</strong>
  <ul class="list-group mb-2">
    <% @style.beers.each do |beer| %>
      <li class="list-group-item list-group-item-action"><%= link_to beer.name, beer %> by <%= link_to beer.brewery.name, beer.brewery %></li>
    <% end %>
  </ul>
<% end %>

<% if current_user %>
  <%= edit_and_destroy_buttons(@style) %>
<% end %>