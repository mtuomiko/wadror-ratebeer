<h1>Ratings</h1>

<div class="row">
  <div class="col-md-4">
    <h4>Best breweries</h4>
    <%= render 'avg_table', items: @top_breweries %>
  </div>

  <div class="col-md-4">
    <h4>Best beers</h4>
    <%= render 'avg_table', items: @top_beers %>
  </div>

  <div class="col-md-4">
    <h4>Best styles</h4>
    <%= render 'avg_table', items: @top_styles %>
  </div>
</div>

<h4>Most active users</h4>
<%= render 'user_table', items: @top_users %>

<h4>Recent ratings</h4>

<ul class="list-group mb-2">
 <% @ratings.recent.each do |r| %>
   <li class="list-group-item list-group-item-action">
    <%= r.beer.name %> by <%= link_to r.user.username, r.user %> at <%= r.created_at %>
   </li>
 <% end %>
</ul>