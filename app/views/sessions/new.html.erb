<h1>Sign in</h1>

<%= form_with url: session_path, local: true do |form| %>
  <div class="form-group row">
    <%= form.label :username, class: 'col-md-2 col-form-label' %>
    <div class="col-md">
      <%= text_field_tag :username, params[:username], class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :password, class: 'col-md-2 col-form-label' %>
    <div class="col-md">
      <%= password_field_tag :password, params[:password], class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col">
      <%= submit_tag "Signin", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>