<h1>Breweries</h1>

<p>Number of breweries: <%= @breweries.count %> </p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery_path(brewery.id) %></td>
        <td><%= brewery.year %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Brewery', new_brewery_path, class: 'btn btn-primary' if current_user %>