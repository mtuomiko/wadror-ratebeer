<%= form_with(model: brewery, local: true) do |form| %>
  <% if brewery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(brewery.errors.count, "error") %> prohibited this brewery from being saved:</h2>

      <ul>
        <% brewery.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: 'col-md-2 col-form-label' %>
    <div class="col-md-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :year, class: 'col-md-2 col-form-label' %>
    <div class="col-md-10">
      <%= form.number_field :year, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :active, class: 'col-md-2 col-form-label' %>
    <div class="col-md-10">
      <%= form.check_box :active, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>