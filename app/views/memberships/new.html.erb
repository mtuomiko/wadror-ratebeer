<h1>New Membership</h1>

<%= form_with model: @membership, local: true do |form| %>
  <% if @membership.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@membership.errors.count, "error") %> prohibited this membership from being saved:</h2>

      <ul>
        <% @membership.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :beer_club_id, class: 'col-md-2 col-form-label' %>
    <div class="col-md-10">
      <%= form.collection_select :beer_club_id, @beer_clubs, :id, :name, {}, { class: 'form-control' } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col">
      <%= form.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>